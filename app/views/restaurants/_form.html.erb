<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">


      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>

        <%= f.submit "Create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
